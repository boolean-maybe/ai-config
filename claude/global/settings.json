{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ANTHROPIC_BEDROCK_BASE_URL": "https://xxx",
    "ANTHROPIC_AUTH_TOKEN": "xxx",
    "CLAUDE_CODE_SKIP_BEDROCK_AUTH": "1",
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL":"us.anthropic.claude-haiku-4-5-20251001-v1:0"
  },
  "model": "sonnet",
  "feedbackSurveyState": {
    "lastShownTime": 1754075059102
  },
  "statusLine": {
      "type": "command",
      "command": "~/.claude/statusline.sh",
      "padding": 0
  },
  "permissions": {
    "allow": [
      "Skill(git)",
      "WebFetch(domain:*)",
      "mcp__GUS__getCurrentUser",
      "mcp__GUS__getWorkForUsers",
      "Bash(curl:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(mkdir:*)",
      "Bash(git fetch:*)",
      "Bash(git status:*)",
      "Bash(git push:*)",
      "Bash(git merge origin/master:*)",
      "Bash(aws eks describe:*)",
      "Bash(aws rds download:*)",
      "Bash(aws s3 ls:*)",
      "Bash(aws ssm get:*)",
      "Bash(docker build:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl top:*)",
      "Bash(helm list:*)",
      "Bash(helm search:*)",
      "Bash(helm status:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(uv sync && python -m py_compile noreact/*.py)",
      "Bash(./gradlew build:*)",
      "Bash(./gradlew test:*)",
      "Bash(./gradlew clean:*)",
      "Bash(./gradlew clean build:*)",
      "Bash(./gradlew check:*)",
      "Bash(./gradlew tasks:*)",
      "Bash(./gradlew dependencies:*)"
    ],
    "deny": [
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(./gradlew bootRun)",
      "Bash(./gradlew run)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude code needs your attention\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Main Claude code finished\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude code subagent finished\""
          }
        ]
      }
    ]
  }
}